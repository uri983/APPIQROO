<?xml version='1.0' encoding='utf-8'?>
<widget id="com.apiqroo.main.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>APIQROO</name>
    <description>
        Aplicación oficial de la APIQROO.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Gerencia de Informática
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <preference name="android-minSdkVersion" value="16" />
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="BackupWebStorage" value="none" />
    </platform>
    <preference name="DisallowOverscroll" value="true" />
    <plugin name="cordova-plugin-console" spec="~1.0.1" />
    <plugin name="cordova-plugin-spinner" spec="~1.1.0" />
    <plugin name="cordova-plugin-statusbar" spec="~1.0.1" />
    <plugin name="cordova-plugin-whitelist" spec="~1.2.0" />
    <plugin name="cordova-plugin-x-socialsharing" spec="~5.3.2" />
    <plugin name="cordova-plugin-googlemaps" spec="^2.2.9">
        <variable name="API_KEY_FOR_ANDROID" value="AIzaSyBaSireiUZFNJFM5j1wF5SGV9jL4HZeTz4" />
        <variable name="PLAY_SERVICES_VERSION" value="11.8.0" />
        <variable name="ANDROID_SUPPORT_V4_VERSION" value="24.1.0" />
        <variable name="LOCATION_WHEN_IN_USE_DESCRIPTION" value="(your custom message)" />
        <variable name="LOCATION_ALWAYS_USAGE_DESCRIPTION" value="(your custom message)" />
    </plugin>
    <preference name="phonegap-version" value="cli-8.0.0" />
    <engine name="browser" spec="~4.1.0" />
</widget>
